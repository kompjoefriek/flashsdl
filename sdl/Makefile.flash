# Makefile to build the SDL library

DEFS += -DFLASH -DDEBUG_BUILD

CC = gcc
INCLUDE = -I./include
CFLAGS  = -g $(DEFS) -O2 -emit-llvm $(INCLUDE)
AR	= ar
RANLIB	= ranlib

CONFIG_H = include/SDL_config.h
TARGET  = libSDL.a
TARGET_LIB = SDL.l.bc
SOURCES = \
	src/*.c \
	src/audio/*.c \
	src/audio/flash/*.c \
	src/cdrom/*.c \
	src/cpuinfo/*.c \
	src/events/*.c \
	src/file/*.c \
	src/joystick/*.c \
	src/stdlib/*.c \
	src/thread/*.c \
	src/timer/*.c \
	src/video/flash/*.c \
	src/video/*.c \
	src/audio/dummy/*.c \
	src/joystick/dummy/*.c \
	src/cdrom/dummy/*.c \
	src/thread/generic/*.c \
	src/timer/dummy/*.c \
	src/loadso/dummy/*.c \

OBJECTS = $(shell echo $(SOURCES) | sed -e 's,\.c,\.o,g')	# convert the list of sources into a list of object filenanes

all: $(TARGET)

$(TARGET): $(OBJECTS)
	$(AR) crv $@ $^
	$(RANLIB) $@

$(CONFIG_H):
	cp $(CONFIG_H).default $(CONFIG_H)

clean:
	rm -f $(TARGET) $(TARGET_LIB) $(OBJECTS)
